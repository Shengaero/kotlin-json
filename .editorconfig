root = true

[*]
charset = utf-8

[src/**]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{java, kt, kts, gradle}]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
end_of_line = lf
indent_size = 4

[*.{md}]
insert_final_newline = false
trim_trailing_whitespace = false
indent_size = 2